{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "routes.ts", "storage.ts", "vite.ts"],
  "exclude": ["functions/api.ts"]
}
